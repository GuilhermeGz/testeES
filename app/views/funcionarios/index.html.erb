<p id="notice"><%= notice %></p>

<h1>Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Senha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.email %></td>
        <td><%= funcionario.senha %></td>
        <td><%= link_to 'Visualizar', funcionario %></td>
        <td><%= link_to 'Editar', edit_funcionario_path(funcionario), id:"e-#{funcionario.nome}"%></td>
        <td><%= link_to 'Deletar', funcionario, id:"d-#{funcionario.nome}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

